    <script>
        let currentSlide = 1;
        const totalSlides = 9; // Updated total slides
        const progressBar = document.getElementById('progressBar');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');

        function showSlide(slideNumber) {
            document.querySelectorAll('.slide').forEach(slide => {
                slide.classList.remove('active');
            });
            document.getElementById(`slide-${slideNumber}`).classList.add('active');
            updateControls();
            updateProgressBar();
        }

        function nextSlide() {
            if (currentSlide < totalSlides) {
                currentSlide++;
                showSlide(currentSlide);
            }
        }

        function prevSlide() {
            if (currentSlide > 1) {
                currentSlide--;
                showSlide(currentSlide);
            }
        }

        function updateControls() {
            prevBtn.disabled = currentSlide === 1;
            if (currentSlide === totalSlides) {
                nextBtn.style.display = 'none';
            } else {
                 if (currentSlide === 1) {
                    nextBtn.style.display = 'none';
                 } else {
                    nextBtn.style.display = 'block';
                 }
            }
        }
        
        function updateProgressBar() {
            const progressPercentage = (currentSlide / totalSlides) * 100;
            progressBar.style.width = `${progressPercentage}%`;
        }
        
        function restartPresentation() {
            currentSlide = 1;
            showSlide(1);
            nextBtn.style.display = 'block';
            document.getElementById('slide-1').querySelector('button').style.display = 'inline-block';
            nextBtn.style.display = 'none';
        }

        function showModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeAllModals() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }
        
        function switchCase(caseId) {
            const btnVaki = document.getElementById('btn-vaki');
            const btnA2censo = document.getElementById('btn-a2censo');
            const caseVaki = document.getElementById('case-vaki');
            const caseA2censo = document.getElementById('case-a2censo');

            if (caseId === 'vaki') {
                caseVaki.style.display = 'block';
                caseA2censo.style.display = 'none';
                btnVaki.classList.add('bg-blue-600', 'text-white');
                btnVaki.classList.remove('bg-gray-200', 'text-gray-700');
                btnA2censo.classList.add('bg-gray-200', 'text-gray-700');
                btnA2censo.classList.remove('bg-blue-600', 'text-white');
            } else {
                caseVaki.style.display = 'none';
                caseA2censo.style.display = 'block';
                btnA2censo.classList.add('bg-blue-600', 'text-white');
                btnA2censo.classList.remove('bg-gray-200', 'text-gray-700');
                btnVaki.classList.add('bg-gray-200', 'text-gray-700');
                btnVaki.classList.remove('bg-blue-600', 'text-white');
            }
        }

        // Initial setup
        document.addEventListener('DOMContentLoaded', () => {
            showSlide(currentSlide);
            nextBtn.style.display = 'none'; // Hide next button on title slide
        });

    </script>
</body>
</html>
